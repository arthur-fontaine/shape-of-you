{% set hide_nav_bar = true %}
{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gray-100">
        <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-100 text-red-700 p-2 rounded mb-4" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <h1 class="text-2xl font-bold mb-6 text-center">Register</h1>

            {{ form_start(registrationForm) }}
            <div class="mb-4">
                {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.name, 'Name', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.name, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(registrationForm.name) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.weightKg, 'Weight (Kg)', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.weightKg, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(registrationForm.weightKg) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.sizeCm, 'Size (cm)', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.sizeCm, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(registrationForm.sizeCm) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.hipMeasurementCm, 'Hip (cm)', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.hipMeasurementCm, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(registrationForm.hipMeasurementCm) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.chestMeasurementCm, 'Chest (cm)', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.chestMeasurementCm, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(registrationForm.chestMeasurementCm) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.waistMeasurementCm, 'Waist (cm)', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.waistMeasurementCm, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(registrationForm.waistMeasurementCm) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.armMeasurementCm, 'Arm (cm)', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.armMeasurementCm, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(registrationForm.armMeasurementCm) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.legMeasurementCm, 'Leg (cm)', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.legMeasurementCm, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(registrationForm.legMeasurementCm) }}
            </div>
            <div class="mb-4">
                {{ form_label(registrationForm.footMeasurementCm, 'Foot (cm)', {'label_attr': {'class': 'block text-gray-700'}}) }}
                {{ form_widget(registrationForm.footMeasurementCm, {'attr': {'class': 'form-input mt-1 block w-full'}}) }}
                {{ form_errors(registrationForm.footMeasurementCm) }}
            </div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition duration-200">
                Register
            </button>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}