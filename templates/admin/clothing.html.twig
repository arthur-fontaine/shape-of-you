{% extends 'base.html.twig' %}
{% set hide_nav_bar = true %}

{% block body %}
    {# Include sidebar #}
    {% include '/admin/components/navbar.html.twig' %}
    
    <div class="ml-64 flex-1 p-8 bg-gray-100 min-h-screen">
        <div class="max-w-3xl mx-auto">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h1 class="text-2xl font-bold mb-6">Edit Clothing Item</h1>
                
                <form action="{{ path('app_admin_clothing_update', {id: clothing.id}) }}" method="post" class="space-y-6">
                    <div class="grid grid-cols-1 gap-6 md:grid-cols-2">
                        <div class="space-y-2">
                            <label for="name" class="block text-sm font-medium text-gray-700">Name</label>
                            <input 
                                type="text" 
                                id="name" 
                                name="name" 
                                value="{{ clothing.name }}"
                                class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-50 shadow-sm focus:border-black focus:ring-black"
                                required
                            >
                        </div>
                        
                        <div class="space-y-2">
                            <label for="type" class="block text-sm font-medium text-gray-700">Type</label>
                            <select 
                                id="type" 
                                name="type"
                                class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-50 shadow-sm focus:border-black focus:ring-black"
                            >
                                {% for type in clothing_types %}
                                    <option value="{{ type.value }}" {% if type.value == clothing.type %}selected{% endif %}>{{ type.value }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <div class="space-y-2">
                            <label for="imageUrl" class="block text-sm font-medium text-gray-700">Image URL</label>
                            <input 
                                type="text" 
                                id="imageUrl" 
                                name="imageUrl" 
                                value="{{ clothing.imageUrl }}"
                                class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-50 shadow-sm focus:border-black focus:ring-black"
                            >
                        </div>
                        
                        <div class="space-y-2">
                            <label for="color" class="block text-sm font-medium text-gray-700">Color</label>
                            <select 
                                id="color" 
                                name="color"
                                class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-50 shadow-sm focus:border-black focus:ring-black"
                            >
                                {% for color in colors %}
                                    <option value="{{ color.value }}" {% if color.value == clothing.color %}selected{% endif %}>{{ color.value }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        
                        <div class="space-y-2">
                            <label for="socialRate5" class="block text-sm font-medium text-gray-700">Social Rate (out of 5)</label>
                            <input 
                                type="number" 
                                id="socialRate5" 
                                name="socialRate5" 
                                value="{{ clothing.socialRate5 }}"
                                min="0"
                                max="5"
                                step="0.1"
                                class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-50 shadow-sm focus:border-black focus:ring-black"
                            >
                        </div>
                        
                        <div class="space-y-2">
                            <label for="ecologyRate5" class="block text-sm font-medium text-gray-700">Ecology Rate (out of 5)</label>
                            <input 
                                type="number" 
                                id="ecologyRate5" 
                                name="ecologyRate5"
                                value="{{ clothing.ecologyRate5 }}"
                                min="0"
                                max="5"
                                step="0.1" 
                                class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-50 shadow-sm focus:border-black focus:ring-black"
                            >
                        </div>
                        
                        <div class="space-y-2">
                            <label for="measurements" class="block text-sm font-medium text-gray-700">Measurements</label>
                            <input 
                                type="text" 
                                id="measurements" 
                                name="measurements" 
                                value="{{ clothing.measurements|json_encode }}"
                                class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-50 shadow-sm focus:border-black focus:ring-black"
                            >
                        </div>
                        
                        <div class="space-y-2">
                            <label for="brand" class="block text-sm font-medium text-gray-700">Brand</label>
                            <select 
                                id="brand" 
                                name="brand"
                                class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-50 shadow-sm focus:border-black focus:ring-black"
                            >
                                {% for brand in brands %}
                                    <option value="{{ brand.id }}" {% if brand.id == clothing.brand.id %}selected{% endif %}>{{ brand.name }}</option>
                                {% endfor %}
                                <option value="" {% if clothing.brand.id is null %}selected{% endif %}>No Brand</option>
                            </select>
                        </div>


                        <div class="space-y-2">
                            <label for="materials" class="block text-sm font-medium text-gray-700">Materials</label>
                            <select
                                    id="materials"
                                    name="materials"
                                    class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-50 shadow-sm focus:border-black focus:ring-black"
                            >
                                {% for material in materials %}
                                    <option value="{{ material.value }}" {% if material.value == clothing.materials %}selected{% endif %}>{{ material.value }}</option>
                                {% endfor %}
                            </select>
                        </div>

                        <div class="space-y-2">
                            <label for="fit" class="block text-sm font-medium text-gray-700">Fit</label>
                            <select
                                    id="fit"
                                    name="fit"
                                    class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-50 shadow-sm focus:border-black focus:ring-black"
                            >
                                {% for fit in fits %}
                                    <option value="{{ fit.value }}" {% if fit.value == clothing.fit %}selected{% endif %}>{{ fit.value }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="space-y-2">
                            <label for="link" class="block text-sm font-medium text-gray-700">Link</label>
                            <input
                                    type="text"
                                    id="link"
                                    name="link"
                                    class="mt-1 block w-full rounded-lg border-gray-300 bg-gray-50 shadow-sm focus:border-black focus:ring-black"
                                    value="{{ clothing.link }}"
                            >
                        </div>
                    </div>

                    <div class="flex items-center justify-end mt-8">
                        <a 
                            href="{{ path('app_admin_clothings') }}" 
                            class="bg-gray-100 text-gray-800 px-4 py-2 rounded-lg hover:bg-gray-200 mr-2"
                        >
                            Cancel
                        </a>
                        <button 
                            type="submit" 
                            class="bg-black text-white px-4 py-2 rounded-lg hover:bg-gray-800"
                        >
                            Save Changes
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}