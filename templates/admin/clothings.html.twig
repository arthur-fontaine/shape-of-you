{% extends 'base.html.twig' %}

{% block body %}
    {% include '/admin/components/navbar.html.twig' %}

    <div class="container">
    <h1>Clothing's</h1>
    <a href="{{ path('app_admin_clothing_new') }}">Add Clothing</a>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Type</th>
            <th>Brand</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for cloth in clothings %}
            <tr>
                <td>{{ cloth.name }}</td>
                <td>
                    <img src="{{ cloth.imageUrl }}" alt="{{ cloth.name }}" style="width: 100px;">
                </td>
                <td>{{ cloth.type.name }}</td>
                <td>
                    {% if cloth.brand %}
                        {{ cloth.brand.name }}
                    {% else %}
                        N/A
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('app_admin_clothing', { 'id': cloth.id }) }}">Edit</a>
                    <a href="{{ path('app_admin_clothing_delete', { 'id': cloth.id}) }}" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}